---
const { id, class: klass = '', ...rest } = Astro.props;
---

<h2 id={id} {...rest} class={`film-section-title font-medium ${klass}`}>
  <slot />
</h2>

<style>
  .film-section-title {
    position: relative;
    margin-top: 3.5rem;
    padding-top: 1.25rem;
  }

  .film-section-title::before {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    height: 1px;
    background: rgba(255, 255, 255, 0.10);
  }

  /* Target the first heading inside its parent container */
  :where(.film-section-title):first-of-type {
    margin-top: 2.25rem;
    padding-top: 0;
  }

  :where(.film-section-title):first-of-type::before {
    display: none;
  }

</style>
